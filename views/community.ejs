<%- include('partials/header_sidebar') %>

<style>

/* ============================
   GLOBAL PAGE STYLE
=============================== */
body {
    background: linear-gradient(135deg, #f5f5f5, #eaeaea);
}

/* Page Fade In */
.page-fade {
    animation: fadeIn 0.6s ease-out;
}
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to   { opacity: 1; transform: translateY(0); }
}

/* ============================
   TITLE
=============================== */
.page-title {
    font-family: 'Cinzel';
    color: #d4af37;
    font-weight: 700;
    letter-spacing: 0.5px;
}
.page-title::after {
    content: "";
    width: 55px;
    height: 3px;
    margin: 8px auto 0;
    display: block;
    background: #d4af37;
    border-radius: 3px;

    animation: titleLine 0.9s forwards;
}
@keyframes titleLine {
    from { width: 0; }
    to   { width: 55px; }
}

/* ============================
   GLASS CARD
=============================== */
.glass-card {
    padding: 20px 20px 30px 20px;
    border-radius: 20px;

    background: rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);

    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    border: 1px solid rgba(255, 255, 255, 0.35);

    transition: transform 0.4s ease, box-shadow 0.4s ease, background 0.4s ease;
    animation: slideUp 0.7s ease forwards;
    opacity: 0;
}
@keyframes slideUp {
    from { transform: translateY(25px); opacity: 0; }
    to   { transform: translateY(0); opacity: 1; }
}
.glass-card:hover {
    transform: translateY(-6px) scale(1.03);
    box-shadow: 0 16px 35px rgba(0,0,0,0.20);
    background: rgba(255, 255, 255, 0.25);
}

/* ============================
   IMAGE
=============================== */
.card-img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 15px;
    margin-bottom: 15px;
    transition: transform 0.4s ease;
}
.glass-card:hover .card-img {
    transform: scale(1.05);
}

/* ============================
   ICON (Glass Circle)
=============================== */
.icon-glass {
    width: 80px;
    height: 80px;
    border-radius: 50%;

    background: rgba(255,255,255,0.25);
    border: 1px solid rgba(255,255,255,0.45);
    backdrop-filter: blur(10px);

    display: flex;
    align-items: center;
    justify-content: center;

    box-shadow: 0 6px 16px rgba(0,0,0,0.12);

    transition: transform 0.3s ease, background 0.3s ease;
}
.glass-card:hover .icon-glass {
    transform: scale(1.08);
    background: rgba(255,255,255,0.3);
}

/* ============================
   BUTTON (Glass Outline)
=============================== */
.glass-btn {
    padding: 7px 25px;
    border-radius: 25px;

    background: rgba(255,255,255,0.08);
    border: 1px solid rgba(255,255,255,0.4);

    color: #444 !important;
    font-weight: 600;

    backdrop-filter: blur(6px);

    transition: 0.3s ease;
}
.glass-btn:hover {
    background: rgba(212, 175, 55, 0.25);
    color: #000 !important;
    transform: scale(1.06);
    border-color: rgba(212, 175, 55, 0.6);
    box-shadow: 0 8px 20px rgba(212, 175, 55, 0.25);
}

/* Mobile Responsiveness */
@media (max-width: 767.98px) {
    .content-wrapper {
        padding-top: 15px;
    }
    .page-title {
        font-size: 1.8rem;
    }
    .glass-card {
        padding: 16px 16px 20px 16px;
    }
    .card-img {
        height: 140px;
        margin-bottom: 12px;
    }
    .icon-glass {
        width: 70px;
        height: 70px;
    }
    .icon-glass i {
        font-size: 1.5rem !important;
    }
    .glass-card h5 {
        font-size: 1.1rem;
    }
    .glass-btn {
        padding: 6px 20px;
        font-size: 0.85rem;
    }
}

@media (max-width: 575.98px) {
    .page-title {
        font-size: 1.5rem;
    }
    .page-title::after {
        width: 40px;
    }
    .glass-card {
        padding: 14px 14px 18px 14px;
    }
    .card-img {
        height: 120px;
        margin-bottom: 10px;
    }
    .icon-glass {
        width: 60px;
        height: 60px;
        margin-bottom: 8px;
    }
    .glass-card h5 {
        font-size: 1rem;
        margin-bottom: 4px;
    }
    .glass-card p {
        font-size: 0.8rem;
        margin-bottom: 8px;
    }
    .glass-btn {
        padding: 5px 16px;
        font-size: 0.8rem;
    }
}

</style>

<div class="content-wrapper page-fade">
    <div class="container mt-4">

        <!-- Heading -->
        <div class="text-center mb-5">
            <h2 class="page-title">Community Hub</h2>
            <p class="text-muted mt-2">
                Select an area to join a dedicated discussion room.
            </p>
        </div>

        <!-- Cards -->
        <div class="row g-4">
            <% const areas = [
                {name: "D-Ground", img: "https://unsplash.it/400/250?image=100"},
                {name: "Kohinoor", img: "https://unsplash.it/400/250?image=101"},
                {name: "Peoples Colony", img: "https://unsplash.it/400/250?image=102"},
                {name: "Madina Town", img: "https://unsplash.it/400/250?image=103"},
                {name: "Satyana Road", img: "https://unsplash.it/400/250?image=104"},
                {name: "Canal Road", img: "https://unsplash.it/400/250?image=104"},
                {name: "General Discussion", img: "https://unsplash.it/400/250?image=106"}
            ]; %>

            <% areas.forEach((area, i) => { %>
            <div class="col-lg-4 col-md-6">
                <div class="glass-card" style="animation-delay: <%= i * 0.12 %>s;">
                    
                    <!-- Sample Image -->
                    <img src="<%= area.img %>" alt="<%= area.name %>" class="card-img">

                    <!-- Icon -->
                    <div class="icon-glass mb-3 mx-auto">
                        <i class="bi bi-people-fill fs-3" style="color: #d4af37;"></i>
                    </div>

                    <!-- Title -->
                    <h5 class="fw-bold mb-2 text-center"><%= area.name %></h5>
                    <p class="text-muted text-center small">Discussion Room</p>

                    <!-- Button -->
                    <div class="text-center">
                        <a href="/area_chat?area=<%= encodeURIComponent(area.name) %>"
                           class="glass-btn">
                            Join Room
                        </a>
                    </div>

                </div>
            </div>
            <% }); %>
        </div>

    </div>
</div>

<%- include('partials/footer') %>
